// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  Admin
  Student
}

// Ajout de l'enum pour les classes (4ème, 5ème)
enum ClasseLevel {
  Quatrieme // 4ème
  Cinquieme // 5ème
  Sixeme
}
// Nouveau modèle Classe qui contient les Subjects
model Classe {
  id       Int       @id @default(autoincrement())
  name     ClasseLevel
  subjects Subject[] // Une classe peut avoir plusieurs subjects
  users User[]
}


model User {
  id         Int       @id @default(autoincrement())
  nom        String
  prenom     String
  telephone  String?
  email      String    @unique
  password   String
  classe     Classe?   @relation(fields: [classeId], references: [id])
  naissance  String?
  lieux      String?
  role       UserRole  @default(Student)
  access     Boolean   @default(true)
  classeId   Int?      // Clé étrangère vers la classe
}


model Subject {
  id        Int       @id @default(autoincrement())
  name      String
  periods   Period[]
  classe    Classe?   @relation(fields: [classeId], references: [id]) // Relation avec Classe
  classeId  Int?      // Clé étrangère vers la classe
}

model Period {
  id        Int       @id @default(autoincrement())
  name      String
  subject   Subject   @relation(fields: [subjectId], references: [id], onDelete: Cascade) 
  subjectId Int       
  lessons   Lesson[]
}

model Lesson {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  period    Period    @relation(fields: [periodId], references: [id], onDelete: Cascade)
  periodId  Int
}
